<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="TestNG - Hybrid Framework Test Suite - Firefox" parallel="tests" thread-count="3" verbose="2">
    
    <groups>
        <run>
        </run>
    </groups>

    <listeners>
        <listener class-name="com.vignesh.listeners.TestListener"/>
    </listeners>

    <parameter name="browser" value="firefox"/>

    <test name="Automate Purchase Process Test">
        <classes>
            <class name="com.vignesh.tests.PurchaseTest"/>
        </classes>
    </test>

    <test name="Verify error messages for mandatory fields Test">
        <classes>
            <class name="com.vignesh.tests.ErrorMessageTest"/>
        </classes>
    </test>

    <test name="Rich Text Editor Test">
        <classes>
            <class name="com.vignesh.tests.RichTextEditorTest"/>
        </classes>
    </test>

    <test name="Iframe and Tab Switch Handling Test">
        <classes>
            <class name="com.vignesh.tests.FrameAndTabHandlingTest"/>
        </classes>
    </test>

    <test name="API Tests">
        <classes>
            <class name="com.vignesh.tests.RestApiTest"/>
        </classes>
    </test>

    <!-- BDD / Cucumber Tests -->
<!--    <test name="BDD Tests">-->
<!--        <classes>-->
<!--            <class name="com.vignesh.runners.CucumberTestRunner"/>-->
<!--        </classes>-->
<!--    </test>-->

</suite>
