<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="TestNG - Smoke Test Suite" parallel="classes" thread-count="3" verbose="2">
    <groups>
        <run>
            <include name="smoke"/>
        </run>
    </groups>

    <listeners>
        <listener class-name="com.vignesh.listeners.TestListener"/>
    </listeners>

    <test name="Smoke Tests">
        <parameter name="browser" value="chrome"/>
        <packages>
            <package name="com.vignesh.tests"/>
        </packages>
    </test>
</suite>
